    <RepositoryUrl>https://github.com/VikashChauhan51/vinquirer</RepositoryUrl>
    <PackageTags>command-line;command-line-inquirer;command-pattern;inquirer;console;console-inquirer;inquirer-prompt;inquirer-confirm;inquirer-input</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyOriginatorKeyFile>..\VInquirer.snk</AssemblyOriginatorKeyFile>
    <RepositoryType>git</RepositoryType>
    <ProjectGuid>{72219BBE-A7AE-4D99-B285-CB75AE267995}</ProjectGuid>
